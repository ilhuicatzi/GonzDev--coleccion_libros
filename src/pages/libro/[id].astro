---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";
import { type Books } from "../../types/books";

export async function getStaticPaths() {
  const books = await getCollection("books");

  return books.map((book: Books) => ({
    params: {
      id: book.slug,
    },
    props: {
      book,
    },
  }));
}

const { book } = Astro.props;
const { data, slug } = book;
const { titulo, autor, imagen, area } = data;
const { Content } = await render(book);
---

<Layout title={titulo}>
  <main class="flex gap-12">
      <aside class="flex justify-center items-center flex-col gap-2">
        <a href="/"></a>
        <img
        transition:name={slug}
        src={imagen}
        alt={titulo}
        class="w-60 h-80 rounded-lg"
      />
      <p class="text-sm text-gray-500 mb-3">{area}</p>
      </aside>
      
      <div class="flex flex-col justify-center flex-1 prose prose-invert">
        <h2>{titulo}</h2>
        <p class="text-sm text-gray-500">{autor}</p>
        
        <Content/>
      </div>

  </main>
</Layout>
