---
import Layout from "../../layouts/Layout.astro";
import ArrowLeftIcon from "../../assets/ArrowLeftIcon.astro";
import LogoPdf from "../../assets/LogoPdf.astro";
import { getCollection, render } from "astro:content";
import { type Books } from "../../types/books";

export async function getStaticPaths() {
  const books = await getCollection("books");

  return books.map((book: Books) => ({
    params: {
      id: book.slug,
    },
    props: {
      book,
    },
  }));
}

const { book } = Astro.props;
const { data, slug } = book;
const { titulo, autor, imagen, area } = data;
const { Content } = await render(book);
---

<Layout title={`GonzDev | ${titulo}`}>
  <main class="flex gap-12">
      <aside class="flex justify-center items-center flex-col gap-2">
        <a href="/" class="text-gray-600 text-sm hover:underline hover:text-gray-400 flex items-center gap-1 transition duration-300"><span><ArrowLeftIcon/> </span> Volver atr√°s</a>
        <img
        transition:name={slug}
        src={imagen}
        alt={titulo}
        class="w-60 h-80 rounded-lg"
      />
      <p class="text-sm text-gray-400">{area}</p>
      <a href={book.data.download_url}
      target="_blank"
      class="flex items-center gap-2 px-4 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition duration-300 ease-in-out hover:scale-105 font-semibold" download
      >
        Descargar PDF
        <LogoPdf class="w-5 h-5"/>
      </a>
      </aside>
      
      <div class="flex flex-col justify-center flex-1 prose prose-invert">
        <h2 transition:name={`title-${slug}`}>{titulo}</h2>
        <p class="text-sm text-gray-400">{autor}</p>
        
        <Content/>
      </div>

  </main>
</Layout>
